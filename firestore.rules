rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function hasRole(role) {
      return isSignedIn() && (
        request.auth.token.role == role || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role
      );
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.role == 'admin' || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    function isInstructor() {
      return hasRole('instructor');
    }

    function isStaff() {
      return isAdmin() || isInstructor();
    }

    // Users collection - Allow read access for messaging purposes and admin management
    match /users/{userId} {
      // Allow unauthenticated email lookup for signup pre-registration check
      // This is secure because it only allows checking if an email exists, not reading user data
      allow list: if request.query.limit == 1;
      
      // Allow authenticated users to query by their own email for profile linking during signup
      allow list: if isSignedIn() && request.query.limit == 1;
      
      // Admin can list all users
      allow list: if isAdmin();
      
      // Admin can get any user, users can get their own profile
      allow get: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      
      // Users can read their own profile
      allow read: if isSignedIn() && request.auth.uid == userId;
      
      // All authenticated users can read active users for messaging
      allow read: if isSignedIn() && resource.data.isActive == true;

      // User can create their own profile
      // Allow any role during signup (for CSV import linking), but default new signups must be 'member'
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // Allow authenticated users to delete CSV profiles with matching email during signup linking
      allow delete: if isSignedIn() && 
        resource.data.email == request.auth.token.email;

      // User can update their own profile, but cannot change privileged fields
      allow update: if isSignedIn() && request.auth.uid == userId
        && request.resource.data.role == resource.data.role;

      // Admin can manage user records (including role)
      allow write: if isAdmin();
    }
    
    // Anyone can read events
    match /events/{eventId} {
      allow read: if true;
      allow write: if isStaff();
    }
    
    // Users can read bookings and write their own bookings
    match /bookings/{bookingId} {
      allow read: if isSignedIn(); // All authenticated users can read bookings to see availability
      
      allow create: if isSignedIn()
        && request.auth.uid == request.resource.data.userId;

      // Owner can update their own booking; staff can update any booking
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.userId ||
        isStaff()
      );

      allow delete: if isSignedIn() && (
        request.auth.uid == resource.data.userId ||
        isAdmin()
      );
    }
    
    // Special events rules
    match /specialEvents/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Messages rules - Allow full messaging functionality
    match /messages/{messageId} {
      // Users can read their own messages (sent or received)
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.senderId ||
        request.auth.uid in resource.data.recipientIds ||
        isAdmin()
      );
      
      // Users can create messages
      allow create: if isSignedIn() && 
        request.auth.uid == request.resource.data.senderId &&
        request.resource.data.recipientIds is list &&
        request.resource.data.subject is string &&
        request.resource.data.body is string;
      
      // Users can update their own messages (for read status, etc.)
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.senderId ||
        request.auth.uid in resource.data.recipientIds ||
        isAdmin()
      );
      
      // Users can delete their own messages (both sent and received)
      allow delete: if isSignedIn() && (
        request.auth.uid == resource.data.senderId ||
        request.auth.uid in resource.data.recipientIds ||
        isAdmin()
      );
    }
    
    // News rules
    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Payments rules
    match /payments/{paymentId} {
      // Admins can read all payments
      allow read: if isAdmin();
      
      // Users can read their own payments
      allow read: if isSignedIn() && request.auth.uid == resource.data.userId;
      
      // Only admins can create payments
      allow create: if isAdmin();
      
      // Only admins can update payments
      allow update: if isAdmin();
      
      // Only admins can delete payments
      allow delete: if isAdmin();
    }
    
    // Groups rules - Admin only management
    match /groups/{groupId} {
      // Admins can read all groups
      allow read: if isAdmin();
      
      // All authenticated users can read active groups (for messaging)
      allow read: if isSignedIn() && resource.data.isActive == true;
      
      // Only admins can create groups
      allow create: if isAdmin();
      
      // Only admins can update groups
      allow update: if isAdmin();
      
      // Only admins can delete groups
      allow delete: if isAdmin();
    }
    
    // Notifications rules
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isSignedIn() && request.auth.uid == resource.data.userId;
      
      // System can create notifications for users
      allow create: if isSignedIn();
      
      // Users can update their own notifications (mark as read, etc.)
      allow update: if isSignedIn() && request.auth.uid == resource.data.userId;
      
      // Users can delete their own notifications
      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId;
      
      // Admins can manage all notifications
      allow read, write: if isAdmin();
    }
    
    // FCM Tokens rules - for push notifications
    match /fcmTokens/{tokenId} {
      // Users can read and write their own FCM tokens
      allow read, write: if isSignedIn() && request.auth.uid == resource.data.userId;
      
      // Admins can manage all tokens
      allow read, write: if isAdmin();
    }
    
    // Notification Preferences rules
    match /notificationPreferences/{userId} {
      // Users can read and write their own preferences
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      // Admins can manage all preferences
      allow read, write: if isAdmin();
    }
  }
}
